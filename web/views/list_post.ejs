<%- include('header'); %>

<h2>Post List</h2>
<% if(expressFlash){ %>
    <div style="color:green;">
        <%=expressFlash%>
    </div>
    <% } %>
<a href="<%= BASEURL %>post/add_post"><button>Add New Post</button></a><br><br>
<table border>
	<tr>
		<th>Id</th>
		<th>Title</th>
		<th>Body</th>
		<th>User</th>
		<th>Action</th>
	</tr>
	  <% vdata.forEach(function (val) { %>
	<tr>
		<td><%= val.created_on %></td>
		<td><%= val.title %></td>
		<td><%= val.body %></td>
		<td><%= val.user_docs[0].name %></td>
		<td><a href="<%= BASEURL %>post/edit_post/<%= val._id %>">Edit</a> | <a href="<%= BASEURL %>post/delete_post/<%= val._id %>">Delete</a></td>
	</tr>
	<% }) %>

</table>
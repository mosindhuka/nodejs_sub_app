<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Login</title>
    
  </head>
  <body>
    <% if(expressFlash){ %>
    <div style="color:red;">
        <%=expressFlash%>
    </div>
    <% } %>
    <div class="container">
      <h1>Login</h1>
      <fieldset>
        <form action="/" method="post">
          Username:<input name="username" type="text" required><br>
          Password:<input name="password" type="text" required><br>
          <input type="submit">
        </form>
      </fieldset>
    </div>
  </body>
</html>
